{
  "version": 2,
  "env": {
	    "PYTHONPATH": "app/"
  },
  "builds": [
    {
      "src": "app/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app/main.py"
    }
  ],
  "crons": [
    {
      "schedule": "0 6 * * *",
      "path": "/trigger-today-reminders"
    }
  ],
  "functions": {
    "app/main.py": {
      "maxDuration": 30
    }
  }
}
