{
  "version": 2,
  "devCommand": "python3 main.py",
  "env": {
	    "PYTHONPATH": "app/"
  },
  "builds": [
    {
      "src": "app/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app/main.py"
    }
  ],
  "crons": [
    {
      "schedule": "0 6 * * *",
      "path": "/trigger-today-reminders"
    }
  ]
}
